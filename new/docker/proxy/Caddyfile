:{$PORT}

route {
  root * /srv

  @assets path /assets/*
  header @assets Cache-Control "public, max-age=31536000, immutable"

  @config path /config.js
  header @config Cache-Control "no-store"

  handle_path /media/* {
    root * /app-data
    file_server
  }

  try_files {path} /index.html
  file_server
}
